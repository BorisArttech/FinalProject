<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
       tools:context="com.example.boris3327.finalproject.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="199dp"
            app:srcCompat="@drawable/justforlulz"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="47dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/sym_action_call"
                android:id="@+id/imageView"
                android:padding="5sp"
                android:layout_weight="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:text="Абонент"
                android:id="@+id/tvNum"
                android:textColor="#000000"
                android:gravity="center"
                android:clickable="true"
                android:layout_weight="4" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/presence_online"
                android:id="@+id/imageView2"
                android:layout_weight="1" />

            <TextView
                android:text="Бульвар Шевченка 249(Дружба народов)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvMap"
                android:padding="5sp"
                android:gravity="center"
                android:textColor="#000000"
                android:clickable="true"
                android:layout_weight="2" />

        </LinearLayout>

        <TextView
            android:text="Джон Константинович Уик"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15sp"
            android:gravity="center"
            android:textColor="#000000"
            android:clickable="true"
            android:id="@+id/tvSite" />

        <TextView
            android:text="Грусный киану"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            android:padding="15sp"
            android:id="@+id/textView" />

    </LinearLayout>

</RelativeLayout>
